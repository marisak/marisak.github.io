<body>
	<div class="container">
		<div class="jumbotron">
			<h1>Marisa Kanemoto</h1>
			<p>
				<a href="http://kendo.ucsd.edu">kendo</a> &amp; <a href="http://waxenantimony.tumblr.com">poetry</a> &amp; <a href="http://instagram.com/thinkmooinc/">art</a>
			</p>
			<button id="colorBtn" class="btn btn-primary btn-lg">Colors!</button>
		</div>

		<h4>Projects</h4>
		{{#each projects}}
		<div class="project" id="{{id}}">
			<div class="thumbnail">
				<a href="#">
					<img src="images/{{image}}" alt="Lorem Pixel image" class="img">
					<p>{{name}}</p>
				</a>
				<div class="details"></div>
			</div>
		</div>
		{{/each}}

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/introHCI.js"></script>
